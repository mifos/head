<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

    <class name="org.mifos.application.reports.business.ReportsBO" table="REPORT">
        <id name="reportId" column="report_id" type="short">
            <generator class="native"/>
        </id>
        
        <property name="reportName" column="report_name" type="string" />    
        <property name="reportIdentifier" column="report_identifier" type="string" />        
    	<many-to-one name="reportsCategoryBO" column="report_category_id" class="org.mifos.application.reports.business.ReportsCategoryBO" />   
<one-to-one name="reportsJasperMap"  class="org.mifos.application.reports.business.ReportsJasperMap" />   

    </class>
    
    <query name="getAllReports">
   	       <![CDATA[ from ReportsCategoryBO ]]>
    </query> 
    
</hibernate-mapping>
