<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	
	
	<class name="org.mifos.application.surveys.business.SurveyResponse" table="SURVEY_RESPONSE">
		<id name="responseId" column="RESPONSE_ID" type="integer" unsaved-value="0" access="field">
			<generator class="native"/>
		</id>
		<many-to-one name="instance" column="INSTANCE_ID" cascade="all" access="field" not-null="true"/>
		<many-to-one name="question" column="QUESTION_ID" cascade="all" access="field" not-null="true"/>
		<property name="freetextValue" column="FREETEXT_VALUE"/>
		<property name="dateValue" column="DATE_VALUE"/>
		<property name="numberValue" column="NUMBER_VALUE"/>
		<many-to-one name="choiceValue" column="CHOICE_VALUE" cascade="all" access="field"/>
	</class>
	<query name="surveys.retrieveAllResponses">
		<![CDATA[from SurveyResponse as response]]>
	</query>
	<query name="surveys.retrieveResponsesByInstance">
		<![CDATA[from SurveyResponse as response where response.instance =:INSTANCE order by response.instance.survey.surveyId, response.question.questionId]]>
	</query>
</hibernate-mapping>
