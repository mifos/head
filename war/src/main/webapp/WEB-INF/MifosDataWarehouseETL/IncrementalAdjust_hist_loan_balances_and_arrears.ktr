    <connection>DestinationDB</connection>
    <sql>select cast(? as date) as as_of_date, l.loan_account_id, l.original_principal, l.original_interest, l.currency_id, 
p.prd_offering_id, 
cust.customer_id, gr.customer_id as group_id, cen.customer_id as center_id,
lo.personnel_id as loan_officer_id, o.office_id as branch_id, flo.personnel_id as formed_by_loan_officer_id,
ifnull(sum(ls.principal_amount), 0.0)  as principal_due,
ifnull(sum(ls.interest_amount), 0.0)  as interest_due,

&#47;*last_installment_due is used for arrears only.  If the loan is in arrears, there must be at least one installment due - the 99 was put 
in so it stands out if an a loan not in arrears makes it through to arrears processing*&#47;
ifnull(max(ls.installment_id), -99) as last_installment_due

from dim_loan l
left join dim_product p on p.product_key = l.product_key
left join dim_customer cust on cust.customer_key = l.customer_key
left join dim_customer gr on gr.customer_key = l.group_key
left join dim_customer cen on cen.customer_key = l.center_key
left join dim_personnel lo on lo.personnel_key = l.loan_officer_key
left join dim_office o on o.office_key = l.branch_key
left join dim_personnel flo on flo.personnel_key = l.formed_by_loan_officer_key
left join dw_loan_schedules ls on ls.loan_account_id = l.loan_account_id and ls.due_date &lt;= ?
where l.valid_from &lt;= ? and l.valid_to &gt; ?   
