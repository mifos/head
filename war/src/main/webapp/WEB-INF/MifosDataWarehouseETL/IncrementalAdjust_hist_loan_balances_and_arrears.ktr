           </partitioning>
    <connection>DestinationDB</connection>
    <sql>select loan_account_id, min(affected.first_date) as first_date, cast(date_sub(?, interval 1 day) as date) as last_date
from 
    (
        (select lt.loan_account_id, min(actiondate.date_value) as first_date
        from fact_loan_disbursals lt
        join dim_date cutoffdate on cutoffdate.date_value = ?
        join dim_date actiondate on actiondate.date_key = lt.disbursal_date_key
        where lt.disbursal_date_key &lt; cutoffdate.date_key
        and lt.created_date_key &gt;= cutoffdate.date_key   
        group by lt.loan_account_id)

        union all
 
        (select lt.loan_account_id, min(actiondate.date_value) as first_date
        from fact_loan_repayments lt
        join dim_date cutoffdate on cutoffdate.date_value = ?
        join dim_date actiondate on actiondate.date_key = lt.action_date_key
        where lt.action_date_key &lt; cutoffdate.date_key
        and lt.created_date_key &gt;= cutoffdate.date_key   
        group by lt.loan_account_id)
        
        union all
 
        (select lt.loan_account_id, min(actiondate.date_value) as first_date
        from fact_loan_fees_and_charges lt
        join dim_date cutoffdate on cutoffdate.date_value = ?
        join dim_date actiondate on actiondate.date_key = lt.action_date_key
        where lt.action_date_key &lt; cutoffdate.date_key
        and lt.created_date_key &gt;= cutoffdate.date_key   
        group by lt.loan_account_id)
    ) affected
group by loan_account_id
order by loan_account_id</sql>
