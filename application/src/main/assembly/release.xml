<assembly>
    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory>sql</outputDirectory>
            <directory>src/main/sql</directory>
            <includes>
                <include>create_mifos_db.sql</include>
                <include>latest-schema.sql</include>
                <include>latest-data.sql</include>
                <include>init_mifos_password.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory></outputDirectory>
            <directory>${basedir}/..</directory>
            <includes>
                <include>LICENSE*</include>
                <include>INSTALL*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../appdomain/target/applicationConfiguration.custom.properties</source>
            <outputDirectory>config</outputDirectory>
        </file>
        <file>
            <source>release/example_local.properties</source>
            <outputDirectory>config</outputDirectory>
            <destName>local.properties</destName>
        </file>
        <file>
            <source>target/mifos-webapp.war</source>
            <outputDirectory></outputDirectory>
            <destName>mifos.war</destName>
        </file>
        <file>
            <source>release/install-ubuntu.sh</source>
            <outputDirectory></outputDirectory>
        </file>
    </files>
</assembly>
